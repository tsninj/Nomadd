        <script>
            document.getElementById("search-bar").addEventListener("input", function(event) {
                const query = event.target.value.toLowerCase(); // Хайх текстийг жижиг үсгээр хувиргах
                const articles = document.querySelectorAll(".cakes article"); // Бүх номнуудыг олох
    
                articles.forEach(function(article) {
                    const bookTitle = article.querySelector("h3").textContent.toLowerCase(); // Номны нэрийг жижиг үсгээр авах
    
                    // Хэрэв номны нэр хайлттай тохирч байвал харуулж, тохирохгүй бол нуух
                    if (bookTitle.includes(query)) {
                        article.style.display = "block";
                    } else {
                        article.style.display = "none";
                    }
                });
            });
        </script>
